pipeline {
   
   agent any {

      stages {

        stage("First Stage") {

          steps {
              script {
                       
                  def name = "upender"

                  if (name == "upender")
                           println("hi ${name}")
                  else 
                           println("end of the stage")

                  sleep 2
                  echo "end of the script"
              }
          }

        }

      }

    }
}
